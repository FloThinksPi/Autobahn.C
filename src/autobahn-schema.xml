<?xml version="1.0" encoding="UTF-8"?>

        <!-- Schema der AutobahnDatenbank -->

<schema>
    <document name="AutobahnDatenbank">
        <collection name="Autobahnen">
            <collection name="Autobahn">
                <attribute name="id"/>
                <text name="Bezeichnung"/>
            </collection>
        </collection>

        <collection name="InfoKnoten">
            <collection name="Node">
                <attribute name="id"/>
                <text name="Bezeichnung"/>
                <text name="Autobahn"/>
                <text name="Km"/>
                <collection name="Def">
                    <text name="Name"/>
                    <text name="Wert"/>
                    <text name="Betreiber"/>
                </collection>
            </collection>
        </collection>

        <collection name="Ausfahrten">
            <collection name="Ausfahrt">
                <attribute name="id"/>
                <text name="Bezeichnung"/>
                <text name="Autobahn"/>
                <text name="Km"/>
                <collection name="Nahe">
                    <text name="ort"/>
                    <text name="poi"/>
                </collection>
            </collection>
        </collection>

        <collection name="Kreuze">
            <collection name="Kreuz">
                <attribute name="id"/>
                <text name="Bezeichnung"/>
                <text name="Autobahn1"/>
                <text name="Km1"/>
                <text name="Autobahn2"/>
                <text name="Km2"/>
            </collection>
        </collection>
    </document>
</schema>



